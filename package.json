{
  "name": "savantql-fe-boilerplate",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "craco start",
    "lint": "eslint && stylelint ./**/*.scss",
    "build": "react-scripts build",
    "test": "CI=true craco test --coverage",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 6026 -s public",
    "storybook:build": "build-storybook -s public"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.3",
    "@savantql/webapp-sdk": "0.0.10",
    "@tanstack/react-query": "^4.24.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.0"
  },
  "devDependencies": {
    "@craco/craco": "^6.4.5",
    "@storybook/addon-a11y": "^6.5.12",
    "@storybook/addon-actions": "^6.5.10",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/addon-interactions": "^6.5.10",
    "@storybook/addon-links": "^6.5.10",
    "@storybook/builder-webpack5": "^6.5.10",
    "@storybook/manager-webpack5": "^6.5.10",
    "@storybook/node-logger": "^6.5.10",
    "@storybook/preset-create-react-app": "^4.1.2",
    "@storybook/react": "^6.5.10",
    "@storybook/testing-library": "^0.0.13",
    "@svgr/webpack": "^6.5.1",
    "@tanstack/react-query-devtools": "^4.8.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/js-cookie": "^3.0.2",
    "@types/node": "^16.11.57",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "babel-plugin-named-exports-order": "^0.0.2",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.10",
    "husky": "^8.0.1",
    "prop-types": "^15.8.1",
    "sass": "^1.54.8",
    "storybook-addon-react-router-v6": "^0.2.1",
    "stylelint": "^14.9.1",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-config-standard-scss": "^4.0.0",
    "stylelint-scss": "^4.3.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.2",
    "webpack": "^5.74.0"
  },
  "jest": {
    "testMatch": [
      "**/+(*.)+(spec|test).+(ts|js)?(x)"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sss|styl)$": "jest-css-modules",
      "\\.svg$": "<rootDir>/src/__mocks__/svg.tsx",
      "^@IndieCampers/website-sdk/dist/FormikPhoneInput": "<rootDir>/src/__mocks__/@IndieCampers/website-sdk/dist/FormikPhoneInput",
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/reportWebVitals.ts",
      "!src/**/*.d.ts",
      "!src/**/*.stories.tsx",
      "!src/**/types.{ts,tsx}",
      "!src/**/__mock_fn__/**/*",
      "!src/**/__data__/**/*",
      "!<rootDir>/node_modules/",
      "!src/config/**/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 1,
        "functions": 1,
        "lines": 1,
        "statements": 1
      }
    },
    "coverageReporters": [
      "text"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
